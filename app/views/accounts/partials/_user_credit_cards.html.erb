<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <div class="px-4 pt-5 my-5 text-center">
        <%= form_with(url: credit_cards_path, method: "get", local: true) do |form| %>
          <div class="form-group">
            <div class="form-group mb-3">
              <%= form.select :number, credit_cards.pluck(:number), { prompt: t('form.credit_card'), required: true }, { class: 'form-select' } %>
            </div>
          </div>
          <div class="actions">
            <%= form.submit t('buttons.view_details'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
